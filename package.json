{
  "name": "playwright-framework-template",
  "version": "1.0.0",
  "description": "Playwright Framework Template : Unified automation framework for Web, Mobile, API & Load testing",
  "main": "index.js",
  "scripts": {
    "test": "echo %NODE_ENV% && npx playwright test --headed --config=playwright.config.ts",
    "test:local": "cross-env NODE_ENV='local' npm run test",
    "test:dev": "cross-env NODE_ENV='dev' npm run test",
    "test:sit": "cross-env NODE_ENV='sit' npm run test",
    "test:headed": "npx playwright test --headed",
    "test:chromium": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:webkit": "npx playwright test --project=webkit",
    "test:mobile": "npx playwright test --project=mobile-chrome",
    "test:api": "npx playwright test tests/api",
    "test:debug": "npx playwright test --debug",
    "test:ui-mode": "npx playwright test --ui",
    "test:report": "npx playwright show-report",
    "install:deps": "npx playwright install --with-deps",
    "install:browsers": "npm install -D @playwright/test@latest --force",
    "codegen": "npx playwright codegen",
    "mcp": "ts-node mcp-server.ts",
    "test:mcp": "playwright test",
    "ci": "npx playwright test --project=chromium --workers=1",
    "flaky": "npx playwright test --project=chromium --repeat-each=20",
    "sanity": "npx playwright test --grep @Sanity --workers=1",
    "smoke": "npx playwright test --grep @Smoke --workers=1",
    "api": "npx playwright test --grep @Api --workers=1",
    "regresion": "npx playwright test --grep @Regressoin --workers=1",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "npx eslint . --ext .js --fix",
    "check": "npm run lint && npm run build",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx}\"",
    "pretest": "tsc --noEmit && npx eslint tests/**/*.ts && npx prettier tests/**/*.ts --write",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npx eslint --fix",
      "npx prettier --write"
    ]
  },
  "keywords": [
    "playwright",
    "typescript",
    "testing",
    "automation",
    "e2e",
    "cross-browser",
    "page-object-model"
  ],
  "author": "Abhay Bharti",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.56.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.17.24",
    "@types/ssh2": "^1.15.4",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsdoc": "^51.3.1",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^3.0.4",
    "eslint-plugin-unicorn": "^59.0.1",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "json-server": "^0.17.4",
    "lint-staged": "^16.2.6",
    "playwright-ajv-schema-validator": "^1.0.2",
    "prettier": "3.6.2",
    "pw-api-plugin": "^2.0.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.7",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@types/mocha": "^10.0.6",
    "@types/webdriverio": "^5.0.0",
    "ajv": "^8.12.0",
    "appium": "^2.4.1",
    "axe-html-reporter": "^2.2.11",
    "dotenv": "^16.5.0",
    "joi": "^17.13.3",
    "mocha": "^10.2.0",
    "moment": "^2.30.1",
    "nodejs-nodemailer-outlook": "^1.2.4",
    "ssh2": "^1.16.0",
    "webdriverio": "^8.28.0",
    "winston": "^3.11.0",
    "zod": "^3.24.2"
  }
}
