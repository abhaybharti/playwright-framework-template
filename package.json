{
  "name": "playwright-framework-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo %NODE_ENV% && npx playwright test --headed --config=playwright.config.ts",
    "test:local": "cross-env NODE_ENV='local' npm run test",
    "test:dev": "cross-env NODE_ENV='dev' npm run test",
    "test:sit": "cross-env NODE_ENV='sit' npm run test",
    "mcp": "ts-node mcp-server.ts",
    "test:mcp": "playwright test",
    "ci": "npx playwright test --project=chromium --workers=1",
    "flaky": "npx playwright test --project=chromium --repeat-each=20",
    "sanity": "npx playwright test --grep @Sanity --workers=1",
    "smoke": "npx playwright test --grep @Smoke --workers=1",
    "api": "npx playwright test --grep @Api --workers=1",
    "regresion": "npx playwright test --grep @Regressoin --workers=1",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "npx eslint . --ext .js --fix",
    "check": "npm run lint && npm run build",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.51.0",
    "@types/node": "^20.17.24",
    "@types/ssh2": "^1.15.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^9.30.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsdoc": "^51.3.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "eslint-plugin-unicorn": "^59.0.1",
    "lint-staged": "^16.1.2",
    "playwright-ajv-schema-validator": "^1.0.2",
    "prettier": "^3.3.3",
    "pw-api-plugin": "^2.0.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "dependencies": {
    "@types/mocha": "^10.0.6",
    "@types/webdriverio": "^5.0.0",
    "ajv": "^8.12.0",
    "appium": "^2.4.1",
    "dotenv": "^16.5.0",
    "joi": "^17.13.3",
    "mocha": "^10.2.0",
    "moment": "^2.30.1",
    "nodejs-nodemailer-outlook": "^1.2.4",
    "ssh2": "^1.16.0",
    "webdriverio": "^8.28.0",
    "winston": "^3.11.0",
    "zod": "^3.24.2"
  }
}
